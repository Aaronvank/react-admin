/* =============== 字体颜色、背景色 ===========  */
$bgColor = #2d3a4b
$fontEEE = #eee

/* ===========页面最小高度满屏 ============== */
minHeight()
  background $bgColor
  min-height 100vh


/* ============字体样式============ */
fontMixin(size = 32px, weight = 400, color = $font333333)
  font-size size
  font-family SourceHanSerifCN
  font-weight weight
  color color


/* ============flex布局============ */
flexLayout(type, justify-content, align-items)
  display type
  justify-content justify-content
  align-items align-items


/* ===========圆形radius或者矩形========== */
circleRadius(width, height, radius)
  width width
  height height
  border-radius radius

/* ============定位布局============ */
positionLayout(position, top, right, bottom, left, zIndex)
  position position
  top top
  right right
  bottom bottom
  left left
  z-index zIndex

/* ============超出省略显示点点点=========== */
ellipsis()
  overflow hidden
  white-space nowrap
  text-overflow ellipsis
